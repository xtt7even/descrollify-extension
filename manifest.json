{
    "manifest_version": 3,
    "name": "Descrollify â€” video scrolling limiter",
    "version": "0.1",
    "description": "An extension that prevents and limits endless scrolling through short videos, helping you stay focused and save time.",
    "icons": {
      "48": "icon48.png",
      "96": "icon96.png"
    },
    "web_accessible_resources": [{
      "resources": ["/images/logo_transparent_white.png", "/lines.json", "popup.js", "options.js"],
      "matches": ["<all_urls>"]
      }],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icon48.png",
        "96": "icon96.png"
      }
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://*.youtube.com/*"
        ],
        "js": ["content.js"],
        "css": ["blocker.css"]
      }
    ],
    "permissions": [
      "tabs",
      "storage",
      "activeTab"
    ],
    "options_page": "options.html"
    
  }